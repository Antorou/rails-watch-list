<div class="container mt-5">
  <h1 class="text-center mb-4"><%= @list.name %></h1>

  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><%= bookmark.comment %></p>

          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary' %>
    <%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary' %>

  </div>
</div>
