<div class="container mt-5">
  <h1 class="text-center mb-4"><%= @list.name %></h1>



  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
              <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %> Poster" class="card-img-top mb-3" style="height: 700px; object-fit: cover;">
            <p class="card-text"><%= bookmark.comment %></p>
            <%= link_to 'Remove Bookmark',
                        bookmark_path(bookmark),
                        data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to remove this bookmark?' },
                        class:"btn btn-warning"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>



  <div class="text-center mt-4">
    <%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary' %>
    <%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
  </div>
</div>
