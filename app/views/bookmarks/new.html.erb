
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="card p-4" style="max-width: 500px; width: 100%;">

    <%= simple_form_for([@list, @bookmark]) do |f| %>
  <h3 class="text-center">Add a Bookmark to <%= @list.name %></h1>
      <div class="mb-3">
        <%= f.input :movie_id, as: :select, collection: Movie.all, include_blank: "Select a Movie", label_method: :title, value_method: :id, label: "Movie", input_html: { class: 'form-select' } %>
      </div>

      <div class="mb-3">
        <%= f.input :comment, as: :text, collection: Movie.all, include_blank: "Add a comment", label: "Comment", input_html: { class: 'form-control' } %>
      </div>

      <div class="d-flex justify-content-center">
        <%= f.submit "Add Bookmark", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <%= link_to 'Back to List', list_path(@list), class: 'btn btn-link' %>
    </div>

  </div>
</div>
